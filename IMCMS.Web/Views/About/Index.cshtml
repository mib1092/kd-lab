  ViewBag.Title = "About";
}
<div class="section-career-banner about" id="bodyWrap">
  <img src="~/images/about_bg.jpg" alt="Photo of Mark Hall">
  <div class="banner-table">
    <div class="banner-cell">
      <div class="center">
        <div>
          <h1>
            <span class="banner-desc">Placing Concrete for Over</span>
            <span class="banner-title">30 Years</span>
          </h1>
        </div>
        <div class="banner-bottom-box">
          <div class="bottom-right">
            <p class="about-desc"><strong>Since 1983,</strong> we’ve provided premier commercial, industrial<br /> and residential concrete solutions across Kansas</p>
          </div>
          <div class="bottom-left">
            <span class="bottom-name"><strong>Mark Hall</strong>  </span>
            <p class="bottom-info">Project Manager&nbsp;&nbsp;&middot;&nbsp;&nbsp;Since 2006</p>
